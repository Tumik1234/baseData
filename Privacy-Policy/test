    function setLanguage(language) {
  // Zapisz wybrany język do localStorage
  localStorage.setItem("language", language);

  // Zmiana flagi i tekstu
  const flag = document.getElementById("currentFlag");
  const langText = document.getElementById("currentLangText");

  if (language === "pl") {
    flag.src = "https://flagcdn.com/w40/pl.png";
    flag.alt = "PL";
    langText.textContent = "PL";
  } else if (language === "en") {
    flag.src = "https://flagcdn.com/w40/gb.png";
    flag.alt = "EN";
    langText.textContent = "EN";
  }

  // Zmieniamy teksty na stronie (tłumaczenie)
  updateTexts(language);

  // Ukrywanie rozwijanego menu po wybraniu języka
  document.getElementById("langDropdown").classList.remove("show");
}

function updateTexts(language) {
  const elements = document.querySelectorAll('[data-text]');
  elements.forEach(el => {
    const key = el.getAttribute('data-text');
    const translatedText = translations[language][key];

    if (translatedText) {
      // Użyj innerHTML, aby umożliwić interpretację tagów HTML
      el.innerHTML = translatedText;
    }
  });
}

// Funkcja do otwierania/zamykania rozwijanego menu języków
function toggleDropdown() {
  document.getElementById("langDropdown").classList.toggle("show");
}

// Zamknięcie rozwijanego menu, jeśli klikniesz poza nim
window.addEventListener("click", (e) => {
  if (!document.querySelector('.lang-btn').contains(e.target) &&
      !document.querySelector('#langDropdown').contains(e.target)) {
    document.getElementById("langDropdown").classList.remove("show");
  }
});

// Ustawienie języka przy załadowaniu strony na podstawie lokalnych ustawień
document.addEventListener("DOMContentLoaded", () => {
  const savedLanguage = localStorage.getItem("language") || "pl";
  setLanguage(savedLanguage);
});

function redirectToPage() {
    window.location.href = 'index.html'; // Podaj ścieżkę do nowej strony
  }
  </script>
